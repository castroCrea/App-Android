<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:buttonGravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#fafafa"
    android:id="@+id/my_toolbar"
    android:layout_gravity="center"
    android:gravity="center"
    >

        // Here is the main code for  your Midle Buttons
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:text="@string/actus"
                android:background="@drawable/buttonshape"
                android:id="@+id/action_actus"
                android:textColor="#000000"
                android:shadowColor="#fafafa"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="1"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:layout_gravity="start"
                android:text="@string/matches"
                android:id="@+id/action_match"
                android:textColor="#000000"
                android:shadowColor="#fafafa"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="1"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:layout_gravity="start"
                android:text="@string/classement"
                android:id="@+id/action_classement"
                android:textColor="#000000"
                android:shadowColor="#fafafa"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="1"
                />
        </LinearLayout>
</android.support.v7.widget.Toolbar>